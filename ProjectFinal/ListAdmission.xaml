<Window x:Class="ProjectFinal.ListAdmission"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectFinal"
        mc:Ignorable="d"
        Title="ListAdmission" Height="450" Width="800" FontSize="20">
    <Grid>
        <DataGrid x:Name="admissionDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Admission ID" Binding="{Binding ID_Admission}" Width="*" />
                <DataGridTextColumn Header="Date Admission" Binding="{Binding Date_Admission}"  Width="*" />
                <DataGridTextColumn Header="NSS" Binding="{Binding NSS}"  Width="*" />
                <DataGridTextColumn Header="Nom" Binding="{Binding Patient.Nom}"   Width="*"/>
                <DataGridTextColumn Header="Prenom" Binding="{Binding Patient.Prenom}"  Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Select Admission" HorizontalAlignment="left" VerticalAlignment="Bottom" Click="SelectAdmission_Click" Margin="5" Background="#006D77" Foreground="White" Padding="5"/>
    </Grid>
</Window>